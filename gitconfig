# vim: set filetype=gitconfig
[init]
  templatedir = ~/.git_template
[alias]
  a = add
  aa = add --all
  aar = !git add --all && git reset --hard
  ap = add --patch
  br = branch
  cm = commit
  co = checkout
  cp = cherry-pick
  ct = checkout -t
  ctags = "!sh -c '[ -f .git/hooks/ctags ] || git init; .git/hooks/ctags' git-ctags"
  cav = commit -av
  cv = commit -v
  d = diff
  dc = diff --cached
  fa = fetch --all --tags --prune
  l = log --decorate --oneline --graph
  ll = log
  pl = pull --rebase
  ra = rebase --abort
  rc = rebase --continue
  ri = rebase -i

  # Show the working tree status in short-format
  s = status -s

  # Delete branches that have been merged into master
  delete-merged = "!git checkout master && git branch --merged | grep -v master | xargs git branch -d"

  next-release = "!git log `git describe --tags --abbrev=0`..HEAD --pretty=format:'%C(yellow)%h%Creset %s %C(bold blue)<%an>%Creset' --abbrev-commit"
  nr = !git next-release
  plum = pull upstream master
[credential]
  helper = osxkeychain
[user]
	name = Adam Reese
	email = adam@reese.io
[color]
  diff = auto
  status = auto
  branch = auto
[core]
  editor = vim
  excludesfile = ~/.gitignore
[push]
  default = current
[branch]
  autosetuprebase = always
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[github]
  user = adamreese
  password = !security 2>&1 >/dev/null find-generic-password -gs github.password | ruby -e 'print $1 if STDIN.gets =~ /^password: \\\"(.*)\\\"$/'
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[rerere]
	enabled = true
