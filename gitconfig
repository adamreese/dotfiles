[init]
  templatedir = ~/.git_template
[alias]
  a = add
  aa = add --all
  aar = !git add --all && git reset --hard
  ap = add -p
  br = branch
  cm = commit
  co = checkout
  cp = cherry-pick
  ct = checkout -t
  ctags = "!sh -c '[ -f .git/hooks/ctags ] || git init; .git/hooks/ctags' git-ctags"
  cav = commit -av
  cv = commit -v
  d = diff
  dc = diff --cached
  fa = fetch --all
  l = log --decorate --oneline --graph
  ll = log
  pl = pull --rebase
  ra = rebase --abort
  rc = rebase --continue
  ri = rebase -i
  ro = !git fetch origin && git reset --hard origin/master
  s = status -s
  sh = !git-sh
  v = show
  next-release = !git log `git describe --tags --abbrev=0`..HEAD --oneline
  nr = !git next-release
[credential]
  helper = osxkeychain
[user]
	name = Adam Reese
	email = adam@reese.io
[color]
  diff = auto
  status = auto
  branch = auto
[core]
  editor = vim
  excludesfile = ~/.gitignore
[push]
  default = current
[branch]
  autosetuprebase = always
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[github]
  user = adamreese
  password = !security 2>&1 >/dev/null find-generic-password -gs github.password | ruby -e 'print $1 if STDIN.gets =~ /^password: \\\"(.*)\\\"$/'
