# vim: ft=gitconfig :

[alias]
  a     = add
  aa    = add --all
  ap    = add --patch
  br    = branch
  cm    = commit
  co    = checkout
  cp    = cherry-pick
  ct    = checkout --track
  cv    = commit --verbose
  d     = diff
  dc    = diff --cached
  fa    = fetch --all --tags --force
  l     = log --decorate --oneline --graph
  pf    = push --force-with-lease --force-if-includes
  pl    = pull --rebase
  ra    = rebase --abort
  rc    = rebase --continue
  ri    = rebase --interactive

  # Amend the currently staged files to the latest commit
  amend = "!git commit --amend -v --date=$(date +%Y-%m-%dT%H:%M:%S)"

  # Show the working tree status in short-format
  s = status --short --branch

  # Interactive rebase with the given number of latest commits
  reb = "!r() { git rebase -i HEAD~$1; }; r"

  new  = log --no-merges --oneline ORIG_HEAD..
  news = log --no-merges --stat ORIG_HEAD..

  snapshot  = !git stash save "snapshot: $(date)" && git stash apply "stash@{0}"
  snapshots = !git stash list --grep snapshot

  # List ignored files
  ignored = ls-files --others -i --exclude-standard

[user]
  name = Adam Reese
  email = adam@reese.io
  signingkey = 7F8A9958

[github]
  user = adamreese

[init]
  defaultBranch = main

[core]
  editor = $EDITOR
  excludesfile = ~/.config/git/ignore

[commit]
  gpgsign = true

[tag]
  forceSignAnnotated = true

[fetch]
  prune = true

[rebase]
  autosquash = true

[push]
  default = current

[branch]
  autosetuprebase = always

[filter "media"]
  clean  = git-media-clean %f
  smudge = git-media-smudge %f

[rerere]
  enabled = true

[merge]
  conflictStyle = diff3

[interactive]
  diffFilter = diff-highlight

[pager]
  show = diff-so-fancy | less --tabs=4 -RFX
  diff = diff-so-fancy | less --tabs=4 -RFX

[difftool]
  prompt = false
  trustExitCode = true

[diff]
  algorithm = histogram

  # Enable an experimental heuristic that shifts the hunk boundary in an
  # attempt to make the resulting patch easier to read.
  indentHeuristic = true

  # Detect copies as well as renames
  renames = copies
  tool = vimdiff

[diff "plist"]
  textconv = plutil -convert xml1 -o -

[difftool "vimdiff"]
  cmd = nvim -d "$LOCAL" "$REMOTE"

[diff-so-fancy]
  markEmptyLines = false

[color "diff"]
  meta         = yellow
  frag         = magenta
  old          = red
  new          = green
  whitespace   = red reverse

[color "diff-highlight"]
  oldNormal    = red
  oldHighlight = red 52
  newNormal    = green
  newHighlight = green 22

[color "status"]
  branch       = yellow
  added        = green
  changed      = yellow
  untracked    = blue

[filter "lfs"]
  process = git-lfs filter-process
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f

[include]
  path = "~/.config/git/config.local"

[url "git@github.com:"]
  insteadOf = https://github.com/
  insteadOf = git://github.com/
