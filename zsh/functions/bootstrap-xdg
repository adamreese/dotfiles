# ------------------------------------------------------------------------------
# bootstrap-xdg
#
# Ensure all xdg directories are preset
# ------------------------------------------------------------------------------

xdg_dirs=(
  ${XDG_CACHE_HOME}
  ${XDG_CONFIG_HOME}
  ${XDG_DATA_HOME}
  ${XDG_RUNTIME_DIR}
  ${XDG_RUNTIME_HOME}
)

if [[ ! -d "${XDG_RUNTIME_DIR}" ]]; then
  sudo mkdir -p "${XDG_RUNTIME_DIR}"
  sudo chmod -R 0700 '/run'
  sudo chown -R "${UID}:${GID}" '/run'
fi

for dir (${xdg_dirs}); do
  [[ ! -d ${dir} ]] || mkdir -pv "${dir}"
done
unset xdg_dirs

# ------------------------------------------------------------------------------
# vim:ft=zsh
