#!/usr/bin/env bash

export KUBECONFIG=${HOME}/.kube/config:${HOME}/kube-solo/kube/kubeconfig

k() {
  local cmd="$1"
  local context="$2"

  case "$cmd" in
    use)
      kubectl config use-context "$context"
      ;;
    *)
      kubectl "$@"
      ;;
  esac
}

source "${GOPATH}/src/k8s.io/kubernetes/contrib/completions/zsh/kubectl"
