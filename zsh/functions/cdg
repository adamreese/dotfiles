# ------------------------------------------------------------------------------
# cdg
#
# Fuzzy finder for GOPATH projects
# Depends on https://github.com/motemen/ghq
# ------------------------------------------------------------------------------

local preview='ls -lh --color --group-directories-first ${GOPATH}/src/{} | head -200'

local dir=$(ghq list ${1-} | fzf --select-1 --preview "${preview}") && \
  cd "${GOPATH}/src/${dir}"

# ------------------------------------------------------------------------------
# vim:ft=zsh
