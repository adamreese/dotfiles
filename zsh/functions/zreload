# ------------------------------------------------------------------------------
# zreload
#
# remove all zcompiled files
# ------------------------------------------------------------------------------

command rm -fv \
  ${ZDOTDIR}/.zcompdump(-.N) \
  ${ZDOTDIR}/**/*.zwc(-.N) \
  ${^fpath}/*.zwc(-.N)

# start again
exec ${SHELL} -l
# ------------------------------------------------------------------------------
# vim:ft=zsh
