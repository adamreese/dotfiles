# vim: ft=zsh :

gml() {
  local -a args=("./...")

  if (( $# > 0 )); then
    args=($@)
  fi

  command gometalinter \
    --vendor \
    --disable=gotype \
    --enable=misspell \
    --sort=linter \
    --deadline=2m \
    --cyclo-over=20 \
    --dupl-threshold=80 \
    --concurrency=6 \
    $args
}
