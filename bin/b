#!/usr/bin/env bash
set -euo pipefail

# https://github.com/junegunn/fzf/wiki/Examples#bookmarks

bookmarks_path=~/Library/Application\ Support/Google/Chrome/Profile\ 2/Bookmarks

jq_script='
def ancestors: while(. | length >= 2; del(.[-1,-2])); . as $in | paths(.url?) as $key | $in | getpath($key) | {name,url, path: [$key[0:-2] | ancestors as $a | $in | getpath($a) | .name?] | reverse | join("/") } | .path + "/" + .name + "\t" + .url'

mark=$(jq -r "${jq_script}" < "${bookmarks_path}" \
  | sed -E $'s/(.*)\t(.*)/\\1\t\x1b[36m\\2\x1b[m/g' \
  | fzf --ansi \
  | cut -d$'\t' -f2)

if [[ -n ${mark:-} ]]; then
  open "${mark}"
fi
