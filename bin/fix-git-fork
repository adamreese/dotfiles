#!/usr/bin/env bash
set -euo pipefail

USERNAME=adamreese

if git remote show upstream >/dev/null 2>&1; then
  echo "upstream already exists" 1>&2;
  exit 1
fi

main() {
  local stashed url

  if ! git diff --quiet; then
    stashed=1
    git stash
  fi

  git checkout master

  url=$(git remote get-url origin)
  project=${url##*/}
  project=${project%.git}

  git remote rename origin upstream
  git remote add origin "git@github.com:${USERNAME}/${project}.git"
  git fetch origin

  git checkout -

  if [[ -n "$stashed" ]]; then
    git stash pop
  fi

  git remote -v
}

main "$@"
