#!/usr/bin/env bash
set -euo pipefail

# Fetch current brush fires from Ventura County Fire Department

endpoint='https://firefeeds.ventura.org/api/incidents'

data="$(curl -sS $endpoint)"

case "${1:-}" in
  -a|--all|all)
    jq <<<"$data"
    ;;
  --camarillo)
    jq '.[] | select(.city == "Camarillo")' <<<"$data"
    ;;
  *)
    jq '.[] | select(.incidentType == "Brush Fire")' <<<"$data"
    ;;
esac
