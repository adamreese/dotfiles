#!/usr/bin/env bash

branch='%(color:yellow)%(refname:short)%(color:reset)'
spacer='%(color:black) %(color:reset)'

format="
%(HEAD) \
$branch|\
%(color:bold green)%(committerdate:relative)%(color:reset)| \
%(contents:subject) \
$spacer|"

git for-each-ref \
    --sort=-committerdate \
    --count=25 \
    "refs/heads/"  \
    --format="$format" \
  | sed -e 's-refs/remotes/origin/--' \
  | column -ts '|'
