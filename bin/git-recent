#!/usr/bin/env bash
set -euo pipefail

branch='%(color:blue)%(refname:short)%(color:reset)'
spacer='%(color:black) %(color:reset)'

format="
%(HEAD) \
$branch|\
%(contents:subject)|\
%(color:dim)%(committerdate:relative)%(color:reset) \
$spacer|"

git for-each-ref \
  --sort=-committerdate \
  --count=25 \
  "refs/heads/" \
  --color \
  --format="$format" \
  | sed -e 's-refs/remotes/origin/--' \
  | column -ts '|'
